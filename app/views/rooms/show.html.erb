<div class="main room-show">
  <div class="container">
    <h3>相手のユーザー名</h3>
    <hr>
    <% if @messages.present? %>
      <% @messages.each do |m| %>
        <div class="room-left">
          <img src='<%= "/user_images/#{m.user.user_image}" %>'>
        </div>
        <div class="room-right">
          <div class="room-user-name">
            <a href="/users/<%= m.user_id %>"><%= m.user.name %></a>
            <%= m.created_at %>
          </div>
        </div> 
        <%= m.message_text %>
        <hr>
      <% end %>
    <% else %>
      <h3 class="text-center">メッセージはまだありません</h3>
    <% end %>


  </div>
</div>
