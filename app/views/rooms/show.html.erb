<div class="main room-show">
  <div class="container">
    <h3>相手のユーザー名</h3>
    <hr>
    <% if @messages.present? %>
      <% @messages.each do |m| %>
        <div class="room-left">
          <img src='<%= "/user_images/#{m.user.user_image}" %>'>
        </div>
        <div class="room-right">
          <div class="room-user-name">
            <a href="/users/<%= m.user_id %>"><%= m.user.name %></a>
            <%= m.created_at %>
          </div>
        </div> 
        <div class="overflow-wrap">
          <%= m.message_text %>
        </div> 
        <hr>
      <% end %>
    <% else %>
      <h3 class="text-center">メッセージはまだありません</h3>
    <% end %>

    <%= form_with(model: [@room,  @message], local: true) do |f| %>
      <div class="form">
        <div class="form-body">
          <%= f.text_field :message_text, :placeholder => "メッセージを入力して下さい" , :size => 70 %>
          <%= f.hidden_field :room_id, :value => @room.id %>
          <br>
          <%= f.submit "投稿する" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
