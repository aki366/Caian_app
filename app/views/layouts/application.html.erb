<!DOCTYPE html>
<html>
  <head>
    <title>CaianApp</title>
    # <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="header-logo">
        <%=link_to("Caian","/top")%>
      </div>

      <ul class="header-menus">
      <li>
        <%=link_to("Caianとは","/about")%>
      </li>

      <li>
        <%=link_to("投稿一覧","/posts/index")%>
      </li>

      <li>
        <%=link_to("新規投稿","/posts/new")%>
      </li>
      
      <li>
        <%=link_to("ユーザー一覧","/users/index")%>
      </li>

      <li>
        <%=link_to("チケット一覧","/top")%>
      </li>
      
      <li>
        <%=link_to("チケット追加","/top")%>
      </li>
      
      <li>
        <%=link_to("チャート","/top")%>
      </li>
      
      <li>
        <%=link_to("マイページ","/top")%>
      </li>
      
      <li>
        <%=link_to("お気に入り","/top")%>
      </li>
      
      <li>
        <%=link_to("ユーザー登録","/signup")%>
      </li>
      
      <li>
        <%=link_to("設定","/top")%>
      </li>

      </ul>
    </header>

    <% if flash[:notice]%>
      <div class="flash">
        <%= flash[:notice]%>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
