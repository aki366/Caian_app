<div class="main user-show">
  <div class="container">
    <div class="user">
      <img src= '<%= "/user_images/#{@user.user_image}" %>'> 

      <h2><%= @user.name %></h2>
      <p><%= @user.email %></p>
      <% if @user.id == @current_user.id && !@user.guest? %>
        <%= link_to("編集", "/users/#{@user.id}/edit") %>
      <% end %>
    </div>

    <% if @user.id == @current_user.id %>
    <% else %>
      <% if @isRoom == true %>
        <p><a href="/rooms/<%= @roomId %>">チャットへ</a>
      <% else %>
        <div class="chat-wrapper">
          <%= link_to(rooms_path(user_ids: [@current_user.id, @user.id]), method: :post) do %>
            <div class="chat-btn">
              <div class="chat-p">チャットを始める</div>
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>

    <ul class="user-tabs">
      <li class="active"><%= link_to("投稿", "/users/#{@user.id}") %></li>
      <li><%= link_to("いいね!", "/users/#{@user.id}/likes") %></li>
    </ul>

    <% @user.posts.each do |post| %>
      <div class="posts-index-item">
        <div class="post-left">
          <img src='<%= "/user_images/#{post.user.user_image}" %>'>
        </div>
        <div class="post-right">
          <div class="post-user-name">
            <%= link_to(post.user.name, "/users/#{post.user.id}") %>
          </div>       
          <%= link_to(post.content, "/posts/#{post.id}") %>
        </div>
      </div>
    <% end %>
  </div>
</div>
