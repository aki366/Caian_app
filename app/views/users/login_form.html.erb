<div class="main users-new">
  <div class="container">
    <div class="form-heading">ログイン</div>
    <div class="form users-form">
      <div class="form-body">
        <% if @error_message %>
          <div class="form-error">
            <%= @error_message %>
          </div>
        <% end %>
        <%= form_with model: @user, url: login_path do |f| %>
          <p>メールアドレス</p>
          <%= f.email_field :email %>
          <p>パスワード</p>
          <%= f.password_field :pssword %>
          <%= f.submit 'ログイン' %>
          <% #TODO: ゲストログインの入口を追加 %>
          <%= link_to 'ゲストとしてログインする', guest_login_path, style: 'color:#1ea3ff;' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
